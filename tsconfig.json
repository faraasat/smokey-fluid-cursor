{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2017",
    "lib": ["ESNext", "dom"],
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
